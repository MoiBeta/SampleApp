<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.sampleloginapp.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_add_message"
        android:name="com.example.sampleloginapp.AddMessageFragment"
        android:label="New Message"
        tools:layout="@layout/fragment_add_message" >
        <action
            android:id="@+id/action_navigation_add_message_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>


</navigation>